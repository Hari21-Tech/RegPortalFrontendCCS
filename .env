# Environment Configuration for Game Backend

# Development (using local JSON data)
NEXT_PUBLIC_USE_BACKEND=false
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000/api

# Production (using real backend)
# NEXT_PUBLIC_USE_BACKEND=true
# NEXT_PUBLIC_BACKEND_URL=https://api.codeblood.com/v1

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
# NEXT_PUBLIC_WS_URL=wss://api.codeblood.com/ws

# Authentication
NEXT_PUBLIC_AUTH_ENDPOINT=/auth
NEXT_PUBLIC_TOKEN_STORAGE_KEY=codeblood_token

# Game Configuration
NEXT_PUBLIC_GAME_TIMEOUT=3600000
NEXT_PUBLIC_MAX_ATTEMPTS=3
NEXT_PUBLIC_HINT_DELAY=300000

# Development flags
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_DELAYS=true

NEXT_PUBLIC_CALLBACK_URL=http://127.0.0.1:3021/auth

NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:3021